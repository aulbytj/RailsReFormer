<div class="container">
  <h1 class="text-center mt-3 mb-2">All Users</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Username</th>
        <th scope="col">Email</th>
        <th colspan="2">User Options</th>
      </tr>
    </thead>
    <tbody>
      <% count = 0 %>
      <% @users.each do |user| %>

      <% count += 1 %>
      <tr>
        <th scope="row"><%= count %></th>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to "Edit", edit_user_path(user), class: 'btn btn-primary', id: "user_#{user.id}" %></td>
        <td><%= link_to "Delete", user_path(user), method: :delete, class: 'btn btn-danger', id: "user_#{user.id}" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New User', new_user_path, class: 'btn btn-success my-2' %>
</div>